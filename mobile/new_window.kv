#:kivy 2.1.0

WindowManager:
    Start:
    Cam:
    Generated:
    Upload:
    Show:
    Enter:
    Rate:
    Review:

<Start>:
    name: "start"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [20, 20, 20, 20]
        spacing: 20
        
        Image:
            source: "jot-it.png"
            size_hint: None, None
            size: "500dp", "300dp"
            pos_hint: {"center_x": 0.5}
        
        Label:
            text: ""
            font_size: "30sp"
            font_name: "Roboto"
            color: 0, 0, 0, 1  # Black color for text
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
        
        Button:
            text: "Upload Photo"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.8, 0.6, 0.7, 1  # Muted pink
            background_color: 0.8, 0.6, 0.7, 1  # Muted pink
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)  # Rounded corners
            on_release: app.open_filechooser()  # Call function to open file chooser
        
        Button:
            text: "Go to Camera"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.75, 0.5, 0.6, 1  # Muted pink
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release:
                app.root.current = "camera"
                root.manager.transition.direction = "left"
        Button:
            text: "Rate My Doctor"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.75, 0.5, 0.6, 1  # Muted pink
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release:
                app.root.current = "rate"
                root.manager.transition.direction = "left"


<Rate>:
    name: "rate"
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        background_color: (1, 0.9, 0.9, 1)  # Light pink background

        Label:
            text: "Enter County:"
            font_size: sp(18)
            color: (0.6, 0.1, 0.4, 1)  # Dark pink text
            size_hint_y: None
            height: self.texture_size[1] + dp(10)

        TextInput:
            id: country
            hint_text: "Type county name here..."
            multiline: False
            size_hint_y: None
            height: dp(40)
            padding: dp(10)
            font_size: sp(16)
            background_color: (1, 0.8, 0.9, 1)  # Light pink input box
            foreground_color: (0.4, 0, 0.2, 1)  # Dark pink text
            border: (2, 2, 2, 2)

        Button:
            text: "Submit"
            size_hint_y: None
            height: dp(40)
            background_color: 0.9, 0.7, 0.8, 1  # Same as Search and Back buttons
            color: (1, 1, 1, 1)  # White text
            on_press: 
                app.process_country(country.text)
                more_selection.opacity = 1

        BoxLayout:
            orientation: "vertical"
            id: more_selection
            opacity: 0
            spacing: dp(10)

            Label:
                text: "Enter the name of the hospital:"
                font_size: sp(18)
                color: (0.6, 0.1, 0.4, 1)
                size_hint_y: None
                height: self.texture_size[1] + dp(10)

            TextInput:
                id: hospital
                hint_text: "Type hospital name here..."
                multiline: False
                size_hint_y: None
                height: dp(40)
                padding: dp(10)
                font_size: sp(16)
                background_color: (1, 0.8, 0.9, 1)
                foreground_color: (0.4, 0, 0.2, 1)
                border: (2, 2, 2, 2)

            Button:
                text: "Submit"
                size_hint_y: None
                height: dp(40)
                background_color: 0.9, 0.7, 0.8, 1  # Same as Search and Back buttons
                color: (1, 1, 1, 1)
                on_press: 
                    app.process_hospital(hospital.text)
                    even_more_selection.opacity = 1

            BoxLayout:
                id: even_more_selection
                orientation: "vertical"
                opacity: 0
                spacing: dp(10)

                Label:
                    text: "Enter the name of the Doctor:"
                    font_size: sp(18)
                    color: (0.6, 0.1, 0.4, 1)
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)

                TextInput:
                    id: doctor
                    hint_text: "Type doctor name here..."
                    multiline: False
                    size_hint_y: None
                    height: dp(40)
                    padding: dp(10)
                    font_size: sp(16)
                    background_color: (1, 0.8, 0.9, 1)
                    foreground_color: (0.4, 0, 0.2, 1)
                    border: (2, 2, 2, 2)

                Button:
                    text: "Submit"
                    size_hint_y: None
                    height: dp(40)
                    background_color: 0.9, 0.7, 0.8, 1  # Same as Search and Back buttons
                    color: (1, 1, 1, 1)
                    on_press: app.process_doctor(doctor.text)

        Button:
            text: "Search"
            size_hint_y: None
            height: dp(50)
            background_color: 0.9, 0.7, 0.8, 1
            color: (1, 1, 1, 1)
            on_release:
                app.root.current = "enter"
                root.manager.transition.direction = "right"

        Button:
            text: "Back to Start Menu"
            size_hint_y: None
            height: dp(50)
            background_color: 0.9, 0.7, 0.8, 1
            color: (1, 1, 1, 1)
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"


<Enter>:
    name: "enter"
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: self.width, self.height

            Image:
                id: doc_image
                source: "ayse_sokullu.png"  #app.get_doctor() + "png"
                size: "500dp", "300dp"
                size_hint: None, None
                pos_hint: {'x': 0, 'top': 1}  # Position the image at the top left
            
            Label:
                text: "Rating: "
                font_size: sp(18)
                color: (0.6, 0.1, 0.4, 1)  # Dark pink text
                size_hint_y: None
                height: self.texture_size[1] + dp(10)

            Button:
                text: "Write a review"
                size_hint_y: None
                height: dp(50)
                background_color: 0.9, 0.7, 0.8, 1
                color: (1, 1, 1, 1)
                on_release:
                    app.root.current = "review"
                    root.manager.transition.direction = "right"

