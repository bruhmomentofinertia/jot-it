<Cam>:
    name: "camera"
    BoxLayout:
        orientation: "vertical"
        #size_hint_y: 0.8
        size_hint: 0.8, None
        size: root.width, root.height
        padding: [20, 20, 20, 20]
        spacing: 20
        pos_hint: {"center_x": 0.5}
        Camera:
            id: cam
            index: 0
            resolution: (1280, 720)
            play: True  
            allow_stretch: True  # Allows the camera to stretch to fit the space
            keep_ratio: False
        
        Button:
            text: "Take Picture"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.9, 0.7, 0.8, 1  # Lighter muted pink
            on_release: 
                root.take_picture()
                app.root.current = "show"

        Button:
            text: "Back to Start Menu"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.8, 0.6, 0.7, 1  # Muted pink
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release:
                app.root.current = "start"
                root.manager.transition.direction = "right"
<Show>:
    name: "show"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [20, 20, 20, 20]
        spacing: 20
        Image:
            id: cam_image
            source: "current.png"
            size_hint: None, None
            size: "500dp", "300dp"
            pos_hint: {"center_x": 0.5}
        # Button:
        #     text: "Save Picture"
        #     on_release: 
        #         root.save()
        Button: 
            text: "Generate Translation"
            font_size: 32
            on_release:
                root.generate()
                app.root.current = "gen"
                root.manager.transition.direction = "left"
        Button:
            text: "Back to Camera"
            font_size: "24sp"
            font_name: "Roboto"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.7, 0.4, 0.4, 1  # Muted red
            background_normal: ''
            background_down: ''
            border: (20, 20, 20, 20)
            on_release:
                app.root.current = "camera"
                root.manager.transition.direction = "right"
