#:kivy 2.1.0

WindowManager:
    Start:
    Upload:
    Cam:
    Generated:

<Start>:
    name: "start"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [20, 20, 20, 20]  # Adding padding to the layout
        spacing: 20  # Space between widgets
        
        Image:
            source: "osbone.png"
            size_hint: None, None
            size: "250dp", "250dp"
            pos_hint: {"center_x": 0.5}
        
        Label:
            text: "Welcome to Medical App"
            font_size: "30sp"
            color: 0, 0, 0, 1  # Black color for text
            size_hint_y: None
            height: self.texture_size[1]
            halign: "center"
        
        Button:
            text: "Upload Photo"
            font_size: "24sp"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.2, 0.6, 0.8, 1  # Light blue button
            on_release:
                app.root.current = "upld"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Go to Camera"
            font_size: "24sp"
            size_hint: None, None
            size: "250dp", "50dp"
            pos_hint: {"center_x": 0.5}
            background_color: 0.2, 0.6, 0.2, 1  # Green button
            on_release:
                app.root.current = "camera"
                root.manager.transition.direction = "left"
        
<Upload>:
    name:"upld"
    BoxLayout:
        orientation:"vertical"
        size:root.width, root.height
        Label:
            text: "uploading thing here"
            font_size: 32
        Button: 
            text: "Go to back to Start"
            font_size: 32
            on_release: 
                app.root.current = "start"
                root.manager.transition.direction = "right"
<Cam>:
    name: "camera"
    BoxLayout:
        orientation: 'vertical'

        Camera:
            id: cam
            index: 0
            resolution: (640, 480)
            play: False  # Camera starts off

        Button: #remove this later and change above to True
            text: "Toggle Camera"
            on_release: root.start_camera()

        Button:
            text: "Back"
            on_release: app.root.current = "start"  # Change to your main screen name
        Button: 
            text: "Generate Translation"
            font_size: 32
            on_release: 
                app.root.current = "gen"
                root.manager.transition.direction = "left"

